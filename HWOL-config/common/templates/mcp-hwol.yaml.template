---
apiVersion: machineconfiguration.openshift.io/v1
kind: MachineConfigPool
metadata:
  name: ${MCP}
spec:
  maxUnavailable: 100%
  machineConfigSelector:
    matchExpressions:
      - {key: machineconfiguration.openshift.io/role, operator: In, values: [worker,${MCP}]} 
  nodeSelector:
    matchLabels:
      node-role.kubernetes.io/$MCP: "" 
