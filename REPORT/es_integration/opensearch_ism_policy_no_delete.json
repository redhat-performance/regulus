{
  "policy": {
    "description": "Regulus ISM policy: data-driven rollover (5k docs/500MB/30d max) with event-based transitions - NO DELETION",
    "default_state": "hot",
    "states": [
      {
        "name": "hot",
        "actions": [
          {
            "rollover": {
              "min_doc_count": 5000,
              "min_primary_shard_size": "500mb",
              "min_index_age": "30d"
            }
          }
        ],
        "transitions": [
          {
            "state_name": "warm",
            "conditions": {
              "min_rollover_age": "1h"
            }
          }
        ]
      },
      {
        "name": "warm",
        "actions": [
          {
            "replica_count": {
              "number_of_replicas": 1
            }
          },
          {
            "force_merge": {
              "max_num_segments": 1
            }
          }
        ],
        "transitions": [
          {
            "state_name": "replicated",
            "conditions": {
              "min_index_age": "7d"
            }
          }
        ]
      },
      {
        "name": "replicated",
        "actions": [
          {
            "read_only": {}
          },
          {
            "replica_count": {
              "number_of_replicas": 0
            }
          }
        ]
      }
    ],
    "ism_template": [
      {
        "index_patterns": ["regulus-*"],
        "priority": 100
      }
    ]
  }
}
